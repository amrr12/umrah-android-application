<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with corners and solid color -->
    <item>
        <shape>
            <solid android:color="#F6F5F5" />
            <corners android:radius="11dp" />
        </shape>
    </item>

    <!-- Top stroke (invisible) to maintain spacing -->
    <item>
        <shape>
            <solid android:color="#00000000" />
            <stroke
                android:width="2dp"
                android:color="#00000000" />
        </shape>
    </item>

    <!-- Bottom stroke -->
    <item android:bottom="2dp">
        <shape>
            <stroke
                android:width="1.5dp"
                android:color="@color/primary2"/>
        </shape>
    </item>
</layer-list>